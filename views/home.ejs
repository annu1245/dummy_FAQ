<!doctype html>
<html lang="en">
    <head>
        <%- include('./layouts/head') %>
    </head>
    <body>
        <div class="container mt-5">
            <button class="btn btn-warning float-end mb-4"><a href="/ask/ques">Ask New Question</a></button>
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                      <th scope="col">Name</th>
                      <th scope="col">Questions</th>
                      <th scope="col">Answer</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% users.forEach(function(user){ %>
                    <tr>
                      <th scope="row"><%= user.name %></th>
                      <td><%= user.questions %></td>
                      <td><button type="button" class="btn btn-warning"><a href="/showAns?id=<%= user.id %>">Show Ans</a></button>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
              </table>
        </div>
    </body>
</html>